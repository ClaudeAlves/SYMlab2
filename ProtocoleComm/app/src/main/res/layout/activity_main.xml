<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="66dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/asynchronous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Asynchrone" />
            <Button
                android:id="@+id/delayed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Différée" />

            <Button
                android:id="@+id/serialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sérialisation JSON + XML" />

            <Button
                android:id="@+id/compressed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compressée" />

            <Button
                android:id="@+id/graphQL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GraphQL" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>